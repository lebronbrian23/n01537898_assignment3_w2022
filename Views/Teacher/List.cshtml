@model IEnumerable<School.Models.Teacher>

@{ 
    ViewBag.Title = "List of Teachers";
}

<h2>List of Teachers / <span> <a href="/teacher/new">Add a new teacher</a> </span></h2>
<div>There  are @Model.Count() teachers in the system</div>

<nav>
   
</nav>
<form method="get" action="/Teacher/List">
    <input type="text" name="searchkey" value="" placeholder="Search name , hire date , salary" />
    <input type="submit" value="Search" />
</form>
<div>
    @{ 
        foreach(School.Models.Teacher Teacher in Model)
        {
            string url = "/Teacher/Show/" + Teacher.TeacherId;
        <div>
            <a href="@url">@Teacher.TeacherEmployeeNumber @Teacher.TeacherFName @Teacher.TeacherLName</a>
        </div>
            
        }

    }
</div>